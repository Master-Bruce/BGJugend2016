<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="pref_show_pastevents"
        android:title="@string/pref_show_pastevents"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="pref_age"
        android:title="Alter filtern"
        android:defaultValue="false"
        android:dependency="pref_birthday"
        android:summary="Zeige nur Veranstaltungen fÃ¼r mein Alter" />

    <PreferenceCategory android:title="Benachrichtigungen">
        <CheckBoxPreference
            android:key="notifications_deadline"
            android:title="@string/pref_title_deadline_notifications"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="notifications_date"
            android:title="@string/pref_title_vibrate"
            android:defaultValue="true" />

        <ListPreference
            android:key="notification_list"
            android:title="@string/pref_notification_list_title"
            android:defaultValue="7"
            android:entries="@array/notification_entries"
            android:entryValues="@array/notification_entries_values" />

        <EditTextPreference
            android:key="notification_time"
            android:title="@string/pref_notification_time_title"
            android:defaultValue="9"
            android:inputType="number"
            android:singleLine="true"
            android:selectAllOnFocus="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Deine Daten">
        <EditTextPreference
            android:key="pref_name"
            android:title="@string/pref_user_name"
            android:defaultValue="@string/pref_default_name"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="pref_street"
            android:title="@string/pref_user_street"
            android:defaultValue="@string/pref_default_street"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="pref_city"
            android:title="@string/pref_user_city"
            android:defaultValue="@string/pref_default_city"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="pref_birthday"
            android:title="@string/pref_user_birthday"
            android:selectAllOnFocus="true"
            android:inputType="date"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="pref_telephone"
            android:title="@string/pref_user_telephone"
            android:defaultValue="@string/pref_default_telephone"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="info_category"
        android:title="Info">
        <Preference
            android:key="pref_info"
            android:title="Jugendarbeit BG" />

        <de.schiewe.volker.bgjugend2016.views.PrivacyDialogPreference
            android:title="Was passiert mit meinen Daten?"
            android:dialogMessage="@string/pref_privacy"
            android:positiveButtonText="OK" />

        <de.schiewe.volker.bgjugend2016.views.PrivacyDialogPreference
            android:title="Wieso brauche ich Internet?"
            android:dialogMessage="@string/internet_text"
            android:positiveButtonText="OK"
            />

        <Preference
            android:key="pref_feedback"
            android:title="Feedback senden"
            android:summary="Created by Volker Schiewe" />

    </PreferenceCategory>
</PreferenceScreen>