<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomeActivity">

    <item
        android:id="@+id/menuBenachrichtigung"
        android:checkable="true"
        android:checked="false"
        android:title="@string/menu_notification"
        android:visible="false"
        app:showAsAction="withText" />

    <item
        android:id="@+id/menuCalendar"
        android:title="@string/menu_calender"
        android:visible="false"
        app:showAsAction="never" />
    <item
        android:id="@+id/menuShare"
        android:title="@string/menu_share"
        android:visible="false"
        app:showAsAction="never" />

    <item
        android:id="@+id/menuApply"
        android:title="@string/menu_register"
        android:visible="false"
        app:showAsAction="ifRoom" />

    <item
        android:id="@+id/menuSearch"
        android:icon="@android:drawable/ic_menu_search"
        android:visible="false"
        app:actionViewClass="android.support.v7.widget.SearchView"
        app:showAsAction="always" />

    <item
        android:id="@+id/menuTest"
        android:title="@string/menu_test"
        android:visible="false"
        app:showAsAction="ifRoom" />
